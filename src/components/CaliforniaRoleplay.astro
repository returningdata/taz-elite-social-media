<style>
    .calirp-section {
        width: 100%;
        max-width: 42rem;
        margin: 0 auto;
        padding: 2rem;
        background: rgba(26, 5, 5, 0.8);
        border: 1px solid rgba(229, 9, 20, 0.4);
        border-radius: 1rem;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.5);
    }

    .calirp-section:hover {
        border-color: rgba(229, 9, 20, 0.6);
        box-shadow: 0 8px 40px rgba(229, 9, 20, 0.2);
    }

    .calirp-header {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .calirp-logo {
        width: 80px;
        height: 80px;
        border-radius: 1rem;
        object-fit: cover;
        border: 2px solid rgba(229, 9, 20, 0.5);
        box-shadow: 0 0 20px rgba(229, 9, 20, 0.3);
    }

    .calirp-title-area {
        text-align: left;
    }

    .server-status-container {
        margin-bottom: 1.5rem;
    }

    .server-status {
        background: rgba(0, 0, 0, 0.4);
        border-radius: 0.75rem;
        padding: 1.25rem;
        border: 1px solid rgba(229, 9, 20, 0.2);
    }

    .status-loading {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        color: #9ca3af;
    }

    .loading-spinner {
        width: 1.5rem;
        height: 1.5rem;
        border: 2px solid rgba(229, 9, 20, 0.3);
        border-top-color: #e50914;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    @keyframes spin {
        to { transform: rotate(360deg); }
    }

    .status-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;
    }

    .status-item {
        text-align: center;
        padding: 0.75rem;
        background: rgba(229, 9, 20, 0.1);
        border-radius: 0.5rem;
        border: 1px solid rgba(229, 9, 20, 0.2);
    }

    .status-value {
        font-size: 1.5rem;
        font-weight: bold;
        color: #e50914;
        display: block;
        margin-bottom: 0.25rem;
    }

    .status-label {
        font-size: 0.75rem;
        color: #9ca3af;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .server-info {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 1px solid rgba(229, 9, 20, 0.2);
    }

    .server-name {
        color: #fff;
        font-weight: 600;
        font-size: 0.875rem;
    }

    .server-online {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #22c55e;
        font-size: 0.875rem;
    }

    .server-offline {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #ef4444;
        font-size: 0.875rem;
    }

    .status-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background: currentColor;
        animation: pulse-dot 2s infinite;
    }

    .server-offline .status-dot {
        animation: none;
    }

    @keyframes pulse-dot {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.5; }
    }

    .calirp-links {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 0.75rem;
    }

    .calirp-link {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        padding: 1rem 0.5rem;
        background: rgba(229, 9, 20, 0.15);
        border: 1px solid rgba(229, 9, 20, 0.3);
        border-radius: 0.75rem;
        color: #fff;
        text-decoration: none;
        transition: all 0.3s ease;
        font-size: 0.75rem;
        font-weight: 500;
    }

    .calirp-link:hover {
        background: rgba(229, 9, 20, 0.25);
        border-color: rgba(229, 9, 20, 0.5);
        transform: translateY(-2px);
        box-shadow: 0 5px 20px rgba(229, 9, 20, 0.3);
    }

    .calirp-link.discord:hover {
        background: rgba(88, 101, 242, 0.2);
        border-color: rgba(88, 101, 242, 0.5);
    }

    .calirp-link.discord svg {
        color: #5865f2;
    }

    .calirp-link.store svg {
        color: #22c55e;
    }

    .calirp-link.devops svg {
        color: #f59e0b;
    }

    @media (max-width: 640px) {
        .calirp-header {
            flex-direction: column;
            text-align: center;
        }

        .calirp-title-area {
            text-align: center;
        }

        .status-grid {
            grid-template-columns: repeat(3, 1fr);
        }

        .calirp-links {
            grid-template-columns: repeat(3, 1fr);
        }
    }
</style>

<script>
    interface ServerStatusResponse {
        online: boolean;
        players: number;
        maxPlayers: number;
        hostname: string;
        error?: string;
    }

    async function fetchServerStatus() {
        const statusElement = document.getElementById('server-status');
        if (!statusElement) return;

        try {
            // Use our serverless function with CFX server code (ajv9r5) to get player count
            const response = await fetch('/api/fivem-status?code=ajv9r5');

            if (!response.ok) {
                throw new Error('Failed to fetch server status');
            }

            const data: ServerStatusResponse = await response.json();

            if (data.online) {
                const players = data.players || 0;
                const maxPlayers = data.maxPlayers || 0;
                let hostname = data.hostname || 'California Roleplay';

                // Clean hostname of FiveM color codes
                hostname = hostname.replace(/\^[0-9]/g, '').replace(/~[a-z]~/gi, '');

                // Truncate if too long
                if (hostname.length > 35) {
                    hostname = hostname.substring(0, 32) + '...';
                }

                statusElement.innerHTML = `
                    <div class="status-grid">
                        <div class="status-item">
                            <span class="status-value">${players}</span>
                            <span class="status-label">Playing</span>
                        </div>
                        <div class="status-item">
                            <span class="status-value">${maxPlayers}</span>
                            <span class="status-label">Max Players</span>
                        </div>
                        <div class="status-item">
                            <span class="status-value">${Math.round((players / maxPlayers) * 100) || 0}%</span>
                            <span class="status-label">Capacity</span>
                        </div>
                    </div>
                    <div class="server-info">
                        <span class="server-name">${hostname}</span>
                        <span class="server-online">
                            <span class="status-dot"></span>
                            Online
                        </span>
                    </div>
                `;
            } else {
                throw new Error(data.error || 'Server offline');
            }
        } catch (error) {
            console.error('Failed to fetch server status:', error);

            statusElement.innerHTML = `
                <div class="status-grid">
                    <div class="status-item">
                        <span class="status-value">--</span>
                        <span class="status-label">Playing</span>
                    </div>
                    <div class="status-item">
                        <span class="status-value">--</span>
                        <span class="status-label">Max Players</span>
                    </div>
                    <div class="status-item">
                        <span class="status-value">--</span>
                        <span class="status-label">Capacity</span>
                    </div>
                </div>
                <div class="server-info">
                    <span class="server-name">California Roleplay</span>
                    <span class="server-offline">
                        <span class="status-dot"></span>
                        Offline
                    </span>
                </div>
            `;
        }
    }

    // Fetch on load
    fetchServerStatus();

    // Refresh every 30 seconds
    setInterval(fetchServerStatus, 30000);
</script>
