---
// YouTube Background Music Component
// Plays the specified YouTube video audio in the background
---

<div id="audio-control" class="audio-control">
    <button id="audio-toggle" class="audio-button" aria-label="Toggle music">
        <svg id="audio-off-icon" class="audio-icon" viewBox="0 0 24 24" fill="currentColor">
            <path d="M3 9v6h4l5 5V4L7 9H3zm13.5 3c0-1.77-1.02-3.29-2.5-4.03v8.05c1.48-.73 2.5-2.25 2.5-4.02z"/>
            <path d="M16.5 12c0-1.77-1.02-3.29-2.5-4.03v8.05c1.48-.73 2.5-2.25 2.5-4.02zM14 3.23v2.06c2.89.86 5 3.54 5 6.71s-2.11 5.85-5 6.71v2.06c4.01-.91 7-4.49 7-8.77s-2.99-7.86-7-8.77z"/>
        </svg>
        <svg id="audio-on-icon" class="audio-icon hidden" viewBox="0 0 24 24" fill="currentColor">
            <path d="M3.63 3.63a.996.996 0 000 1.41L7.29 8.7 7 9H3v6h4l5 5v-6.59l4.45 4.45c-.69.51-1.47.94-2.32 1.2v2.06a8.94 8.94 0 003.98-1.94l1.93 1.93a.996.996 0 101.41-1.41L5.05 3.63a.996.996 0 00-1.42 0zM19 12c0 .82-.15 1.61-.41 2.34l1.53 1.53c.56-1.17.88-2.48.88-3.87 0-4.28-2.99-7.86-7-8.77v2.06c2.89.86 5 3.54 5 6.71zm-7-8l-1.88 1.88L12 7.76zm4.5 8A4.5 4.5 0 0014 7.97v1.79l2.48 2.48c.01-.08.02-.16.02-.24z"/>
        </svg>
        <span class="audio-label">Click for Music</span>
    </button>
</div>

<!-- Hidden YouTube Player -->
<div id="youtube-player-container" class="youtube-player-hidden">
    <div id="youtube-player"></div>
</div>

<style>
    .audio-control {
        position: fixed;
        bottom: 20px;
        right: 20px;
        z-index: 100;
    }

    .audio-button {
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 12px 16px;
        background: rgba(229, 9, 20, 0.2);
        border: 1px solid rgba(229, 9, 20, 0.5);
        border-radius: 50px;
        color: #e50914;
        cursor: pointer;
        transition: all 0.3s ease;
        font-family: inherit;
        font-size: 0.875rem;
    }

    .audio-button:hover {
        background: rgba(229, 9, 20, 0.3);
        box-shadow: 0 0 20px rgba(229, 9, 20, 0.4);
        transform: scale(1.05);
    }

    .audio-icon {
        width: 24px;
        height: 24px;
    }

    .audio-label {
        color: #fff;
    }

    .hidden {
        display: none;
    }

    .audio-button.playing {
        animation: pulse-glow 2s infinite;
    }

    @keyframes pulse-glow {
        0%, 100% {
            box-shadow: 0 0 10px rgba(229, 9, 20, 0.4);
        }
        50% {
            box-shadow: 0 0 25px rgba(229, 9, 20, 0.7);
        }
    }

    .youtube-player-hidden {
        position: fixed;
        top: -9999px;
        left: -9999px;
        width: 1px;
        height: 1px;
        overflow: hidden;
        pointer-events: none;
    }
</style>

<script>
    // YouTube IFrame API
    declare global {
        interface Window {
            onYouTubeIframeAPIReady: () => void;
            YT: any;
        }
    }

    let player: any = null;
    let isPlaying = false;
    let apiReady = false;

    const audioToggle = document.getElementById('audio-toggle');
    const audioOnIcon = document.getElementById('audio-on-icon');
    const audioOffIcon = document.getElementById('audio-off-icon');
    const audioLabel = document.querySelector('.audio-label');

    // Load YouTube IFrame API
    function loadYouTubeAPI() {
        if (document.getElementById('youtube-api-script')) return;

        const tag = document.createElement('script');
        tag.id = 'youtube-api-script';
        tag.src = 'https://www.youtube.com/iframe_api';
        const firstScriptTag = document.getElementsByTagName('script')[0];
        firstScriptTag.parentNode?.insertBefore(tag, firstScriptTag);
    }

    // Called when YouTube API is ready
    window.onYouTubeIframeAPIReady = function() {
        apiReady = true;
        createPlayer();
    };

    function createPlayer() {
        if (!apiReady || player) return;

        player = new window.YT.Player('youtube-player', {
            height: '1',
            width: '1',
            videoId: '3K1qeCrb9E4',
            playerVars: {
                autoplay: 0,
                controls: 0,
                disablekb: 1,
                fs: 0,
                iv_load_policy: 3,
                loop: 1,
                modestbranding: 1,
                playlist: '3K1qeCrb9E4',
                playsinline: 1
            },
            events: {
                onReady: onPlayerReady,
                onStateChange: onPlayerStateChange
            }
        });
    }

    function onPlayerReady(event: any) {
        event.target.setVolume(30);
    }

    function onPlayerStateChange(event: any) {
        // If video ended, it will loop due to playlist parameter
        if (event.data === window.YT.PlayerState.ENDED) {
            player.playVideo();
        }
    }

    function toggleMusic() {
        if (!player) {
            loadYouTubeAPI();
            // Wait for API to load
            const checkReady = setInterval(() => {
                if (player && typeof player.playVideo === 'function') {
                    clearInterval(checkReady);
                    playMusic();
                }
            }, 100);
            return;
        }

        if (!isPlaying) {
            playMusic();
        } else {
            pauseMusic();
        }
    }

    function playMusic() {
        if (player && typeof player.playVideo === 'function') {
            player.playVideo();
            isPlaying = true;
            audioToggle?.classList.add('playing');
            audioOnIcon?.classList.remove('hidden');
            audioOffIcon?.classList.add('hidden');
            if (audioLabel) audioLabel.textContent = 'Music On';
        }
    }

    function pauseMusic() {
        if (player && typeof player.pauseVideo === 'function') {
            player.pauseVideo();
            isPlaying = false;
            audioToggle?.classList.remove('playing');
            audioOnIcon?.classList.add('hidden');
            audioOffIcon?.classList.remove('hidden');
            if (audioLabel) audioLabel.textContent = 'Music Off';
        }
    }

    audioToggle?.addEventListener('click', toggleMusic);

    // Pre-load the API
    loadYouTubeAPI();
</script>
