---
import Layout from '../layouts/Layout.astro';
import TwitchStatus from '../components/TwitchStatus.astro';
import DiscordPresence from '../components/DiscordPresence.astro';
import FallingMonsters from '../components/FallingMonsters.astro';
import StrangerThingsMusic from '../components/StrangerThingsMusic.astro';
import CaliforniaRoleplay from '../components/CaliforniaRoleplay.astro';
---

<Layout title="TazElite Plays | The Upside Down">
    <FallingMonsters />
    <StrangerThingsMusic />

    <div class="flex flex-col items-center text-center">
