        <p class="text-sm text-red-400 mb-8 tracking-widest uppercase">
            Welcome to The Upside Down
        </p>

        <div class="divider"></div>

        <section class="w-full max-w-md mb-12">
            <h2 class="stranger-things-title text-2xl sm:text-3xl mb-6">Connect With Me</h2>

            <div class="flex flex-col gap-4">
                <TwitchStatus username="tazeliteplays" />

                <a
                    href="https://discord.gg/b36UJMhmT8"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="social-link"
                >
